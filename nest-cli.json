{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {    
    "deleteOutDir": true,
    "assets": [
      {
        "include": "users/imagesProfile",
        "outDir": "./dist/users/imagesProfile",
        "watchAssets": true
      },
      {
        "include": "posts/images",
        "outDir": "./dist/posts/images",
        "watchAssets": true
      },
      {
        "include": "users/documents",
        "outDir": "./dist/users/documents",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
